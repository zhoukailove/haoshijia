<% provide(:title, "编辑用户") %>


    <%= form_for(@user, html: {class: "form-signin"}) do |f| %>
    <h2 class="form-signin-heading">编辑用户</h2>
        <%= render 'shared/error_messages' %>


        <%= f.label "姓名" %>
        <%= f.text_field :username ,class: "input-block-level"%>

        <%= f.label "电话" %>
        <%= f.text_field :mobile,class: "input-block-level" %>

        <%= f.label "email" %>
        <%= f.text_field :email,class: "input-block-level" %>

        <%= f.label :password %>
        <%= f.password_field :password,class: "input-block-level" %>

        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation,class: "input-block-level" %>

        <%= f.submit "保存", class: "btn btn-large btn-primary" %>
    <% end %>

